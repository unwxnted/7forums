<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>

<body>

    <div class="card">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <h2 class="navbar-brand" href="#">7forums</h2>
            <h6 class="text-info" href="#">
                <a href="/profile/<%= user.id %>">  <%= user.username %>  </a>
            </h6>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse text" id="navbarNav">

                <ul class="navbar-nav ml-auto text-center">
                    <li class="nav-item">
                        <form id="post" action="/post/create" method="get">
                            <button type="submit" class="btn btn-success mr-2">Post</button>
                        </form>
                    </li>

                    <li class="nav-item">
                        <form id="logout" action="/api/users/logout" method="post">
                            <button type="submit" class="btn btn-danger">Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>
    </div>

    <div class="card">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#categoryNav"
                aria-controls="categoryNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse text" id="categoryNav">

                <ul class="navbar-nav mx-auto text-center">

                    <li class="nav-item mr-2">
                        <form action="/" method="get" class="m-0 p-0">
                            <button class="btn btn-light" type="submit">All</button>
                        </form>
                    </li>

                    <li class="nav-item mr-2">
                        <form action="/filter/General" method="get" class="m-0 p-0">
                            <button class="btn btn-light" type="submit">General</button>
                        </form>
                    </li>

                    <li class="nav-item mr-2">
                        <form action="/filter/Tech" method="get" class="m-0 p-0">
                            <button class="btn btn-light" type="submit">Tech</button>
                        </form>
                    </li>
                    
                    <li class="nav-item mr-2">
                        <form action="/filter/VideoGames" method="get" class="m-0 p-0">
                            <button class="btn btn-light" type="submit">VideoGames</button>
                        </form>
                    </li>

                    <li class="nav-item mr-2">
                        <form action="/filter/Entertainment" method="get" class="m-0 p-0">
                            <button class="btn btn-light" type="submit">Entertainment</button>
                        </form>
                    </li>

                    <li class="nav-item mr-2">
                        <form action="/filter/News" method="get" class="m-0 p-0">
                            <button class="btn btn-light" type="submit">News</button>
                        </form>
                    </li>

                    <li class="nav-item mr-2">
                        <form action="/filter/off-topic" method="get" class="m-0 p-0">
                            <button class="btn btn-light" type="submit">Off-topic</button>
                        </form>
                    </li>

                </ul>

            </div>

        </nav>
    </div>

    <div class="container mt-4">

        <% if (posts.length> 0) { %>
            <% posts.forEach(post=> { %>
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= post.title %>
                        </h5>
                        <p class="card-text">
                            <%= post.content.slice(0, 150) + '...' %>
                        </p>

                        <div class="row">
                            <div class="col">
                                <form action="/post/view" method="GET">
                                    <input type="hidden" name="postId" value="<%= post.id %>">
                                    <button class="btn btn-primary" type="submit">Read</button>
                                </form>
                            </div>


                            <div class="col-1 d-flex justify-content-between">
                                <form action="/post/like" method="POST">
                                    <input type="hidden" name="postId" value="<%= post.id %>">
                                    <button class="btn btn-success" type="submit">Like</button>
                                    ❤️: <%= post.likes %>
                                </form>
                                
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
                    <% } else { %>
                        <p>No posts</p>
                        <% } %>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
